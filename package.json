{
    "name": "@gosling/monorepo",
    "author": "Sehi L'Yi",
    "version": "0.9.18",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gosling-lang/gosling.js"
    },
    "homepage": "https://gosling-lang.github.io/gosling.js",
    "scripts": {
        "start": "pnpm -r --parallel dev",
        "build": "pnpm -r --parallel build",
        "check": "pnpm -r --parallel check",
        "test": "vitest run",
        "clean": "pnpm -r exec -- rm -rf node_modules",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
        "format": "prettier --write scripts packages \"*.{js,json}\"",
        "predeploy": "yarn build-editor; echo \"gosling.js.org\" >> build/CNAME",
        "deploy": "gh-pages -d build"
    },
    "sideEffect": false,
    "devDependencies": {
        "@types/node": "^17.0.34",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "conventional-changelog-cli": "^2.2.2",
        "eslint": "^8.15.0",
        "eslint-plugin-react": "^7.29.4",
        "husky": "^8.0.1",
        "jest-canvas-mock": "^2.4.0",
        "jsdom": "^19.0.0",
        "prettier": "^2.6.2",
        "typescript": "^4.6.4",
        "vite": "^2.9.9",
        "vitest": "^0.12.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-p changelog schema-all format && git add .",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
