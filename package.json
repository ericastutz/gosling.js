{
    "name": "@gosling/monorepo",
    "author": "Sehi L'Yi",
    "version": "0.9.18",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gosling-lang/gosling.js"
    },
    "homepage": "https://gosling-lang.github.io/gosling.js",
    "scripts": {
        "start": "pnpm -r dev",
        "build": "run-p build-types build-lib",
        "build-lib": "vite build --mode lib && node scripts/build-umd && node scripts/build-embed",
        "build-types": "tsc --emitDeclarationOnly",
        "build-editor": "node --max_old_space_size=4096 ./node_modules/vite/bin/vite.js build",
        "preview": "vite preview",
        "test": "pnpm --parallel -r test run",
        "clean": "pnpm -r exec -- rm -rf node_modules",
        "coverage": "vitest run --coverage",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "format": "eslint packages/ --fix && prettier \"packages/**/*.{js,jsx,ts,tsx,css}\" --write",
        "schema-base": "ts-json-schema-generator -f tsconfig.json --no-type-check --no-ref-encode",
        "schema-gosling": "yarn schema-base -p packages/schema/src/gosling.schema.ts -t GoslingSpec -o packages/schema/src/gosling.schema.json",
        "schema-higlass": "yarn schema-base -p packages/schema/src/higlass.schema.ts -t HiGlassSpec -o packages/schema/src/higlass.schema.json",
        "schema-theme": "yarn schema-base -p packages/core/src/utils/theme.ts -t Theme -o packages/schema/src/theme.schema.json",
        "schema-template": "yarn schema-base -p packages/schema/src/gosling.schema.ts -t TemplateTrackDef -o packages/schema/src/template.schema.json",
        "schema-all": "run-p schema-gosling schema-higlass schema-theme schema-template",
        "predeploy": "yarn build-editor; echo \"gosling.js.org\" >> build/CNAME",
        "deploy": "gh-pages -d build"
    },
    "sideEffect": false,
    "devDependencies": {
        "jest-canvas-mock": "^2.4.0",
        "jsdom": "^19.0.0",
        "typescript": "^4.6.4",
        "vite": "^2.9.9",
        "vitest": "^0.12.6"
    },
    "resolutions": {
        "slugid": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-p changelog schema-all format && git add .",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
